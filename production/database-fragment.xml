    </sensors>
    <environment>
        <volvo>
        </volvo>
    </environment>
    <actions>
        <action>
            <xpath>/data/sensors/volvoVisualisation/lastSeen</xpath>
            <url>/data/environment/volvo/mostRecentActivity</url>
            <method>PUT</method>
            <mimetype>text/plain</mimetype>
